<!DOCTYPE html>
<html lang="fr" class="font-grotesque bg-mint-green-100">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Darker+Grotesque:wght@300..900&display=swap" rel="stylesheet">
  <title>Accueil - TeckelCard</title>
  <link href="/css/output.css" rel="stylesheet"> <!-- Ton Tailwind compilé -->
</head>

<body>

  <header class="flex items-center justify-between">
    <div class="m-4 relative h-20 -right-8">
      <div class="absolute rounded-xl border-1 w-40 h-15 bg-white top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 -z-10"></div>
      <div class="absolute rounded-xl border-1 w-40 h-15 bg-white top-[calc(50%+4px)] left-[calc(50%-4px)] transform -translate-x-1/2 -translate-y-1/2 z-10 flex items-center justify-center">
        <div class="flex items-center justify-center">
          <img src="/img/Teckel-Coins.png" class="w-8 mr-1" alt="">
          <p id="nb-jetons" class="text-3xl"><%= utilisateur.jetons %></p>
        </div>
      </div>
      <div id="form-container">
        <% if (recolteDisponible) { %>
          <form id="gain-jetons-form">
            <div class="button-principal h-8 w-24 -bottom-20">
              <div>
                <button type="submit" class="flex justify-center items-center w-full h-full text-lg text-black uppercase">
                  +2 jetons
                </button>
              </div>
            </div>
          </form>
        <% } else { %>
          <p class="text-sm text-gray-700 mt-2 text-center">
            Prochain recolte disponible à <%= prochaineRecolte %>
          </p>
        <% } %>
      </div>
      
      
      
    </div>

    <div>
      <% if (utilisateur) { %>
        <h1 class="sm:block">Bonjour <%= utilisateur.pseudo %></h1>
      <% } else { %>
        <h1 class="sm:block">Connectez-vous pour jouer</h1>
      <% } %>
    </div>

    <% if (utilisateur) { %>
      <div class="m-4 relative">
        <div class="rounded-4xl w-9 h-9 border-2 absolute -bottom-4 left-5 transform -translate-x-1/2 -translate-y-1/2 bg-principal-800 -z-10"></div>
        <div class="relative duration-100 ease-in active:-bottom-1 active:right-1">
          <div class="rounded-4xl w-9 h-9 border-2 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-principal-800 z-0 duration-100 ease-in active:bg-principal-200"></div>
          <img src="/images/other/Account_Circle_Icon.svg" alt="Icône utilisateur" class="relative z-10">
        </div>
      </div>
    <% } else { %>
      <div class="button-principal">
        <div>
          <a href="/connexion">Connexion</a>
        </div>
      </div>
    <% } %>
  </header>

  <main>

    <h1>Accueil</h1>

    <div class="flex flex-col md:flex-row justify-between md:justify-evenly gap-4 px-4 md:px-6 lg:px-8">
      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <a href="/collection">
          <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
            <img class="rounded-xl hover:opacity-45 transition-opacity 500ms ease-in-out" src="img/collection.png" alt="">
          </div>
        </a>
        <div class="button-principal">
          <div><a href="/collection" class="text-sm">Collection</a></div>
        </div>
      </div>

      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
          <img src="https://placehold.co/320x180" alt="">
        </div>
        <div class="button-principal">
          <div><a href="/clicker" class="text-sm">Clicker</a></div>
        </div>
      </div>

      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
          <img src="https://placehold.co/320x180" alt="">
        </div>
        <div class="button-principal">
          <div><a href="/marche" class="text-sm">marché</a></div>
        </div>
      </div>
    </div>

    <h1>Boosters</h1>
    <div class="w-full overflow-x-auto pb-4 pl-4">
      <div class="flex space-x-4 w-max">
        <% boosters.forEach(booster => { %>
          <div class="flex flex-col items-center">
            <a href="/ouvrir-booster?booster=<%= booster.id %>">
              <img src="/img_Booster/<%= booster.image %>" alt="Booster <%= booster.id %>" class="w-70">
            </a>
            <img src="/images/other/Information_Symbols_Icon.svg" alt="">
          </div>
        <% }); %>
      </div>
    </div>

    <h1>Meilleurs Joueurs</h1>
    <div class="flex flex-col md:flex-row gap-4 mx-auto px-4 max-w-6xl">

      <% const classements = [
        { titre: "Plus riches", data: resultRiches, field: "jetons", suffixe: "jetons" },
        { titre: "Collection la plus complète", data: resultCollection, field: "total_cartes", suffixe: "cartes" },
        { titre: "Plus de cartes obtenues", data: resultCartesObtenue, field: "total_cartes", suffixe: "cartes" }
      ]; %>

      <% classements.forEach(classement => { %>
        <div class="w-full md:w-1/3 border-1 rounded-xl p-4 shadow-md">
          <h3 class="font-bold text-xl text-center mb-3 text-principal-800"><%= classement.titre %></h3>
          <% if (classement.data.length > 0) { %>
            <ul class="divide-y">
              <% classement.data.forEach((row, index) => { %>
                <li class="py-2 flex justify-between items-center <%= index < 3 ? 'font-bold' : '' %>">
                  <span class="py-4 px-4"><%= index + 1 %>. <%= row.pseudo %></span>
                  <span class="text-right py-4 px-4"><%= row[classement.field] %> <%= classement.suffixe %></span>
                </li>
              <% }); %>
            </ul>
          <% } else { %>
            <p class="text-center text-gray-500">Aucun joueur trouvé.</p>
          <% } %>
        </div>
      <% }); %>

    </div>

  </main>

  <script>
    document.getElementById('gain-jetons-form').addEventListener('submit', async (e) => {
      e.preventDefault();
    
      const button = e.target.querySelector('button');
      const formContainer = document.getElementById('form-container');
      const messageElement = document.getElementById('message-jetons');
      const jetonsElement = document.getElementById('nb-jetons');
    
      const response = await fetch('/gagner-jetons', {
        method: 'POST'
      });
    
      const data = await response.json();
    
      if (data.success && data.newJetons !== undefined) {
        jetonsElement.innerText = data.newJetons;
      }
    
      // Maintenant on supprime le bouton et on met le message
      formContainer.innerHTML = `
        <p class="text-sm text-gray-700 mt-2 text-center">
          Prochain recolte disponible à ${data.prochaineRecolte}
        </p>
      `;
    });
    </script>
    
    
    

</body>
</html>
