<!DOCTYPE html>
<html lang="fr" class="font-grotesque bg-mint-green-100">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Darker+Grotesque:wght@300..900&display=swap" rel="stylesheet">
  <title>Accueil - TeckelCard</title>
  <link href="/css/output.css" rel="stylesheet"> <!-- Ton Tailwind compilé -->
</head>

<body>
  <header
    class="relative flex flex-row items-center justify-between gap-4 bg-gray-50 p-4 px-6 sm:px-10 rounded-b border-b border-gray-500">

    <div class="flex flex-col sm:flex-row items-center gap-2">
      <!-- Bloc jetons -->
      <div class="relative">
        <div class="bg-mint-green-100 w-40 h-16 border rounded relative">
          <div
            class="bg-mint-green-100 w-40 h-16 border rounded absolute top-0 left-0 -translate-x-2 translate-y-1 flex items-center justify-center px-2 space-x-2">
            <span class="text-3xl">
              <%= utilisateur.jetons %>
            </span>
            <img src="img/Teckel-Coins.png" alt="" class="h-12">
          </div>
        </div>

      </div>
    </div>



    <!-- Texte centré -->
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-3xl hidden md:block uppercase ">
      Bienvenue <%= utilisateur.pseudo %>
    </div>

    <!-- Bouton compte -->
    <div class="border rounded-full w-12 h-12 bg-principal-800">
      <div
        class="border rounded-full w-12 h-12 translate-x-0.5 -translate-y-0.5 active:-translate-x-0 active:translate-y-0 ease-in-out duration-100 transition bg-principal-800 active:bg-principal-200 flex items-center justify-center">
        <img src="img/Account.svg" alt="Icône de compte" class="w-10 h-10">
      </div>
    </div>
  </header>


  <main>
  <div class="w-full flex flex-col items-center m-4">
    <div id="form-container" class="w-fit">
      <% if (recolteDisponible) { %>
        <form id="gain-jetons-form">
          <div class="button-principal h-12 w-35 mt-2 sm:mt-0 mx-auto sm:mx-0">
            <div>
              <button type="submit"
                class="flex justify-center items-center w-full h-full text-lg text-black uppercase">
                +3 jetons
              </button>
            </div>
          </div>
        </form>
      <% } else { %>
        <p class=" text-gray-800 text-center p-8">
          Récolte disponible à <%= prochaineRecolteDate %>
        </p>
      <% } %>
    </div>
  </div>
  

    <h1>Accueil</h1>

    <div class="flex flex-col md:flex-row justify-between md:justify-evenly gap-4 px-4 md:px-6 lg:px-8">
      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <a href="/collection">
          <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
            <img class="rounded-xl hover:opacity-45 transition-opacity 500ms ease-in-out" src="img/collection.png"
              alt="">
          </div>
        </a>
        <div class="button-principal">
          <div><a href="/collection" class="text-sm">Collection</a></div>
        </div>
      </div>

      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
          <img src="https://placehold.co/320x180" alt="">
        </div>
        <div class="button-principal">
          <div><a href="#" class="text-sm">Clicker</a></div>
        </div>
      </div>

      <div class="flex flex-col items-center w-full md:w-[30%] my-2">
        <a href="/collection">
          <div class="max-w-80 max-h-60 min-w-55 min-h-45 bg-principal-200 rounded-xl text-center w-full mb-3">
            <img src="https://placehold.co/320x180" alt="">
          </div>
        </a>
        <div class="button-principal">
          <div><a href="/marche" class="text-sm">marché</a></div>
        </div>
      </div>
    </div>

    <h1>Boosters</h1>
    <div class="w-full overflow-x-auto pb-4 pl-4">
      <div class="flex space-x-4 w-max">
        <% boosters.forEach(booster=> { %>
          <div class="flex flex-col items-center">
            <a href="/ouvrir-booster?booster=<%= booster.id %>">
              <img src="/img_Booster/<%= booster.image %>" alt="Booster <%= booster.id %>" class="w-70">
            </a>
            <img src="/images/other/Information_Symbols_Icon.svg" alt="">
          </div>
          <% }); %>
      </div>
    </div>

    <h1>Meilleurs Joueurs</h1>
    <div class="flex flex-col md:flex-row gap-4 mx-auto px-4 max-w-6xl">

      <% const classements=[ { titre: "Plus riches" , data: resultRiches, field: "jetons" , suffixe: "jetons" }, {
        titre: "Collection la plus complète" , data: resultCollection, field: "total_cartes" , suffixe: "cartes" }, {
        titre: "Plus de cartes obtenues" , data: resultCartesObtenue, field: "total_cartes" , suffixe: "cartes" } ]; %>

        <% classements.forEach(classement=> { %>
          <div class="w-full md:w-1/3 border-1 rounded-xl p-4 shadow-md">
            <h3 class="font-bold text-xl text-center mb-3 text-principal-800">
              <%= classement.titre %>
            </h3>
            <% if (classement.data.length> 0) { %>
              <ul class="divide-y">
                <% classement.data.forEach((row, index)=> { %>
                  <li class="py-2 flex justify-between items-center <%= index < 3 ? 'font-bold' : '' %>">
                    <span class="py-4 px-4">
                      <%= index + 1 %>. <%= row.pseudo %>
                    </span>
                    <span class="text-right py-4 px-4">
                      <%= row[classement.field] %>
                        <%= classement.suffixe %>
                    </span>
                  </li>
                  <% }); %>
              </ul>
              <% } else { %>
                <p class="text-center text-gray-500">Aucun joueur trouvé.</p>
                <% } %>
          </div>
          <% }); %>

    </div>

  </main>

  <script>
    document.getElementById('gain-jetons-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const button = e.target.querySelector('button');
      const formContainer = document.getElementById('form-container');
      const messageElement = document.getElementById('message-jetons');
      const jetonsElement = document.getElementById('nb-jetons');

      const response = await fetch('/gagner-jetons', {
        method: 'POST'
      });

      const data = await response.json();

      if (data.success && data.newJetons !== undefined) {
        jetonsElement.innerText = data.newJetons;
      }

      // Maintenant on supprime le bouton et on met le message
      formContainer.innerHTML = `
        <p class="text-sm text-gray-700 mt-2 text-center">
          Prochain recolte disponible à ${data.prochaineRecolte}
        </p>
      `;
    });
  </script>




</body>

</html>